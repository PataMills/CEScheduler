{
  "name": "cabinet-manufacturing-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "db:create": "node ./scripts/db-create.js",
    "db:migrate": "node ./scripts/db-migrate.js",
    "db:seed": "node ./scripts/db-seed.js",
    "seed:min": "node ./scripts/db-seed-min.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "test:api": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js __tests__/api --runInBand",
    "test:ui": "cross-env NODE_ENV=test playwright test",
    "test:fast": "cross-env NODE_ENV=test SKIP_DB_BOOTSTRAP=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "smoke": "node scripts/smoke.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "migrate": "powershell -ExecutionPolicy Bypass -File scripts/migrate.ps1"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@slack/web-api": "^7.12.0",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mime": "^4.1.0",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.10",
    "pg": "^8.11.5",
    "puppeteer": "^24.24.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^29.5.14",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "start-server-and-test": "^2.1.2",
    "supertest": "^7.1.4"
  }
}
